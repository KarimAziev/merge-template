{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "lib",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
